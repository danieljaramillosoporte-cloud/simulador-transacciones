datasource db {
  provider = "postgresql" // o "mysql" o "sqlite" segÃºn uses
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              Int           @id @default(autoincrement())
  name            String
  curp            String        @unique
  email           String?
  country         String?
  createdAt       DateTime      @default(now())
  totalAmount     Float         @default(10000)  
  transactions    Transaction[]

  // ðŸ‘‰ Nuevo campo
  legalDocumentUrl String?      // ðŸ‘ˆ aquÃ­ guardamos la ruta del PDF
}



model Transaction {
  id        Int      @id @default(autoincrement())
  reference String
  code      String
  amount    Float
  legalized Boolean  @default(false)
  createdAt DateTime @default(now())
  date      DateTime?             // ðŸ‘ˆ Campo manual opcional
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

